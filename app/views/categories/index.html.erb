<%- model_class = Category -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Categories" %></h1>
</div>
<table  class = "table table-striped" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.desc %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),  category_path(category) , :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),  edit_category_path(category) , :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      category,
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")), new_category_path, :class => 'btn btn-primary' %>
