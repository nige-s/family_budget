<%- model_class = Trantype -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Transaction Types" %></h1>
</div>
<table  class = "table table-striped" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trantypes.each do |trantype| %>
      <tr>
        <td><%= trantype.name %></td>
        <td><%= trantype.desc %></td>
        <td><%= link_to t('.edit', :default => t("helpers.links.edit")),  edit_trantype_path(trantype) , :class => 'btn btn-mini' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      trantype,
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_trantype_path, :class => 'btn btn-primary' %>

