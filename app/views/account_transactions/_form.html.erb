<%= form_for @account_transaction, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :account_id, :class => 'control-label' %>
    <div class="controls">
	    <%= f.collection_select(:account_id, Account.all, :id, :name, :include_blank => 'Select an account') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tran_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tran_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Credit/Debit", :class => 'control-label' %>
    <div class="controls">
	    <%= f.select(:sign, {'DEBIT' => 'debit', 'CREDIT' => 'credit'}, :include_blank => 'Select type') %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                account_transactions_path, :class => 'btn' %>
  </div>
<% end %>
