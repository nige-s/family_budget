<%- model_class = RecurringTransaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:account_id) %>:</strong></dt>
  <dd><%= @recurring_transaction.account_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interval) %>:</strong></dt>
  <dd><%= @recurring_transaction.interval %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @recurring_transaction.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @recurring_transaction.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sign) %>:</strong></dt>
  <dd><%= @recurring_transaction.sign %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @recurring_transaction.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @recurring_transaction.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @recurring_transaction.end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_updated) %>:</strong></dt>
  <dd><%= @recurring_transaction.last_updated %></dd>
  <dt><strong><%= model_class.human_attribute_name(:day) %>:</strong></dt>
  <dd><%= @recurring_transaction.day %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              recurring_transactions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_recurring_transaction_path(@recurring_transaction), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              recurring_transaction_path(@recurring_transaction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
