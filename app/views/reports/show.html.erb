<%- model_class = Report -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @report.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @report.category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:account_id) %>:</strong></dt>
  <dd><%= @report.account_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sdate) %>:</strong></dt>
  <dd><%= @report.sdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:edate) %>:</strong></dt>
  <dd><%= @report.edate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:range) %>:</strong></dt>
  <dd><%= @report.range %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sign) %>:</strong></dt>
  <dd><%= @report.sign %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              reports_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_report_path(@report), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              report_path(@report),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
