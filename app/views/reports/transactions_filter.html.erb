<h1>Filter Transactions</h1>
<%= render 'form' %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Transaction date</th>
      <th>Transaction type</th>
      <th>Transaction Category</th>
      <th>Description</th>
      <th>Supplier</th>
      <th>Amount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trans.each do |transaction| %>
      <tr>
        <% if transaction.user_id? %>
        <td><%= User.find(transaction.user_id).name %></td>
        <% else %>
        <td> Not Known </td>
        <% end %>
        <td><%= transaction.tran_date %></td>

        <% if transaction.trantype_id? %>
        <td><%= Trantype.find(transaction.trantype_id).name %></td>
        <% else %>
        <td> Not Known </td>
        <% end %>

        <% if transaction.category_id? %>
        <td><%= Category.find(transaction.category_id).name%></td>
        <% else %>
        <td> Not Known </td>
        <% end %>

        <td><%= transaction.description %></td>
        <td><%= transaction.supplier %></td>
        <td><%= number_to_currency(transaction.amount, unit: '£') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if params[:total] %>
   <%= paginate @trans, :params => {total: params[:total]}%>
   <% content_for :total do %>
    <div class = "alert alert-success"><%= "Total spent: #{number_to_currency(params[:total], unit: '£')} " %></div>
   <% end %>
<% else %>
  <%= paginate @trans, :params => {total: ReportsController.total}%>
  <% content_for :total do %>
   <div class = "alert alert-success"><%= "Total spent: #{number_to_currency(ReportsController.total, unit: '£')} "  %></div>
   <% end %>
<% end %>

<%= link_to 'Back', reports_path %>