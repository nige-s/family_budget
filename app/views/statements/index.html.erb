<%- model_class = Statement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= form_for @statement, method: :get, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <div class="controls">
    <%= f.collection_select(:acc_id, Account.user_accounts(current_user.id), :id, :name, :include_blank => 'Select an Account') %> 
  </div>
</div>
<div class="control-group">
    <%= f.label "Forecast", :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :edate %>
    </div>
  </div>
<div class="form-actions">
    <%= f.submit 'Create Statement', :class => 'btn btn-primary' %>   
  </div>
<% end %> 
<table class="table table-striped">
  <thead>
    <tr>
       <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:account_id) %></th>
      <th><%= model_class.human_attribute_name(:tran_date) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= "Credit/Debit" %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @acc_transactions.each  do |transaction| %>
      <tr>
        <td><%= link_to transaction.id, transaction_path(transaction.id) %></td>
        <td><%= Account.find(transaction.account_id).name %></td>
        <td><%= transaction.tran_date %></td>
        <td><%= transaction.description %></td>
        <td><%= number_to_currency(transaction.amount, unit: 'Â£') %></td>
        <td><%= transaction.sign %></td>
        <% if transaction.sign == 'credit' %>
	<td>
          <%= link_to t('.edit', :default => t("helpers.links.edit_deposit")),
                      edit_deposit_transaction_path(transaction), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      transaction_path(transaction),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
	      </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_transaction_path,
            :class => 'btn btn-primary' %>

<% render 'partials/total', :params => {:total_title => 'Balance', :total_s =>  @balance, :tran_count => @tran_count} %> 

